<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerceapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RetrofitClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ProfileActivity.ProfileActivity"></activity>
        <activity android:name=".loginActivity.LoginActivity" />
        <activity android:name=".cartActivity.CartActivity" />
        <activity android:name=".productListActivity.ProductListActivity" />
        <activity android:name=".productInfoActivity.ProductInfoActivity" />
        <activity android:name=".homeActivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>